INPUT-
#include <stdio.h>
#include <math.h>

double factorial(int n) {
    if (n == 0 || n == 1)
        return 1.0;
    else
        return n * factorial(n - 1);
}

double power(double x, int n) {
    double result = 1.0;
    for (int i = 0; i < n; i++)
        result *= x;
    return result;
}

double cosine(double x) {
    double result = 1.0;
    int sign = -1;
    for (int n = 2; n <= 10; n += 2) {
        double term = power(x, n) / factorial(n);
        result += sign * term;
        sign *= -1;
    }
    return result;
}

int main() {
    double angle;
    printf("Enter the angle in radians: ");
    scanf("%lf", &angle);

    double cos_value = cosine(angle);
    printf("cos(%.2f) = %.6f\n", angle, cos_value);

    return 0;
}

OUTPUT-
Enter the angle in radians: 30
cos(30.00) = -147430091.857143
